{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} Acceuil {% endblock %}
{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('home')}}
{% endblock %}
{% block body %}
<section >
    <div class="header d-flex align-items-center justify-content-center ">
    <h1 class="text-center text-white title-header">Bienvenue jeune sorcier !</h1>
    </div>
    <div class="row mx-0 justify-content-center">
        <div id="carouselExampleIndicators" class="carousel slide carousel-fade mt-5" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('build/quidditch.jpg') }}" alt="Terrain de quidditch">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('build/poudlard-express-1.jpg') }}" alt="Poudlard Express">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('build/escalier.jpg') }}" alt="Grande Salle">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Pr√©cedent</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Suivant</span>
            </a>
        </div>
    </div>
    <div>
        <h2>Nos dernier arrivant</h2>
    </div>
</section>
{% endblock %}
