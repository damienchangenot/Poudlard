<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Poudlard -{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro&display=swap" rel="stylesheet">
        {% block stylesheet %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel="icon" href="{{ asset('build/favicon.jpg') }}">
    </head>
    <body>
    <header>
    {% block navbar %}{% endblock %}
    </header>
    {% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert text-center alert-{{ label }} mb-0">
            {{ message }}
        </div>
    {% endfor %}
    {% endfor %}
        {% block body %}{% endblock %}
    {% block footer %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
