{% extends 'layoutAdmin.html.twig' %}

{% block title %}{{ parent() }}{{ student.name }}{% endblock %}

{% block body %}
    <h1 class="text-center pt-5">{{ student.name }}</h1>
    <div class="container">
        <div class="text-center my-4">
             <img src="{{ vich_uploader_asset(student, 'pictureFile') }}" alt="photo de {{ student.name }}">
        </div>
    <table class="table table-hover table-dark table-striped mt-4">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>Maison</th>
                <td>{{ student.house.name ?? ''}}</td>
            </tr>
            <tr>
                <th>Professeur</th>
                <td>{{ student.isTeacher ? 'Oui' : 'Non' }}</td>
            </tr>
            {% if student.isTeacher == true %}
            <tr>
                <th>Matière</th>
                <td>{{ student.subject ?? ''}}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
     <div class="row justify-content-center mx-0">
    <a class="btn btn-secondary rounded-pill mr-4"  href="{{ path('admin_student_edit', {'id': student.id}) }}">Modifier</a>
    {{ include('admin/student/_delete_form.html.twig') }}
     </div>
    <a class="btn btn-secondary rounded-pill" href="{{ path('admin_student_index') }}">Retour à l'index</a>
    </div>
{% endblock %}
