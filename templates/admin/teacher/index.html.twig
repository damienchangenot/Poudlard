{% extends 'layoutAdmin.html.twig' %}

{% block title %}{{parent()}}Liste des professeurs{% endblock %}

{% block body %}
<div class="container">

    <h1 class="text-center">Liste des professeurs</h1>

    <a class="btn btn-outline-primary mb-2 "href="{{ path('admin_teacher_new') }}"><i class="bi bi-plus"></i>Ajouter un professeur</a>
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th> 
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.name }}</td>
                <td>
                    <a href="{{ path('admin_teacher_show', {'id': teacher.id}) }}">show</a>
                    <a href="{{ path('admin_teacher_edit', {'id': teacher.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donn√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>    
{% endblock %}
