<div class="card border-0" style="width: 18rem; height: 360px">
    <img class="card-img-top" src="{{ vich_uploader_asset(people, 'pictureFile') }}" alt="picture of {{ people.name }}">
    <div class="card-body py-2 bg-secondary text-white  text-center">
        <h4 class="card-title mb-1 ">{{people.name}}</h4>
        {% if people.isTeacher == true %}
        <h5 class="badge badge-warning mb-0">Professeur</h5>
        {% endif %}
        <h5>{{people.house.name ??  '' }}</h5>
        <h5>{{ people.subject ??  ''}}</h5>
    </div>
</div>