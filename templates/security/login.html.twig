{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }}Se connecter!{% endblock %}

{% block body %}
    <div class="container ">
<form method="post" class="">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connécter en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center mt-5">Connectez-vous</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rounded-pill" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control rounded-pill" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="row mx-0 justify-content-center">
    <button class="btn my-3 btn-secondary rounded-pill" type="submit">
        Se connecter
    </button>
    <a class="btn btn-secondary rounded-pill my-3 ml-4" href="{{ path('app_register') }}">Pas encore de compte ? Crée en un !</a>
    </div>
</form>
        <a href="{{ path('app_forgot_password_request') }}" class="text-secondary font-weight-bold text-decoration-none">On m'a jeté un sort d'Oubliettes !</a>
    </div>
{% endblock %}
